<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:orientation="horizontal"
    android:padding="6dip">


    <ImageView
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        app:srcCompat="@drawable/less_rounded_button_dark"
        android:tint="@color/myshadowColor"
        android:background="@drawable/less_rounded_shadow"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="68dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/rectangle"
        android:tint="@color/white"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginLeft="68dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/less_rounded_button_dark"
        android:tint="@color/white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">



    <android.support.constraint.ConstraintLayout
        android:id="@+id/imagePart"
        android:layout_width="66dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:maxHeight="84dp"
            android:maxWidth="84dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_local_see_black_24dp"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>




    <LinearLayout
        android:id="@+id/textPart"
        android:layout_width="0dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/brandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/review0"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_review_circle_clean" />

                    <ImageView
                        android:id="@+id/review1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_review_circle_clean" />

                    <ImageView
                        android:id="@+id/review2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_review_circle_clean" />

                    <ImageView
                        android:id="@+id/review3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_review_circle_clean" />

                    <ImageView
                        android:id="@+id/review4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_review_circle_clean" />
                </LinearLayout>
            </FrameLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating" />

        </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="TextView" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/otherPart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >


            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:id="@+id/bookmarkPart">


                <ImageView
                    android:id="@+id/bookmark"
                    android:tint="@color/bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_bookmark_border_black_24dp" />
            </FrameLayout>
    </RelativeLayout>
    </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:visibility="gone"
        android:layout_marginTop="12dp">


        <ImageView
            android:id="@+id/round3"
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/rounded_button"
            android:tint="@color/black"
            />



        <TextView
            android:id="@+id/promoted"
            android:gravity="center"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="promoted"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>



</RelativeLayout>